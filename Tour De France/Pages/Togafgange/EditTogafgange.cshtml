@page "{id:int}"
@model Tour_De_France.Pages.Togafgange.EditTogafgangeModel
@{
}
<h1>Ændre togafgang tid her:</h1>
<body class="zealand">
</body>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Togafgang.TogafgangId" class="control-lable"></label>
                <input asp-for="@Model.Togafgang.TogafgangId" class="form-control" readonly="@(true)"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Togafgang.Departure" class="control-lable"></label>
                <input asp-for="@Model.Togafgang.Departure" class="form-control"/>
                <span asp-validation-for="Togafgang.Departure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Togafgang.Arrival" class="control-lable"></label>
                <input asp-for="@Model.Togafgang.Arrival" class="form-control" />
                <span asp-validation-for="Togafgang.Arrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
