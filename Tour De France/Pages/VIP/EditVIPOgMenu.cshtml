@page "{id:int}"
@model Tour_De_France.Pages.VIP.EditVIPModel
@{
}
<h1>Edit VIP eller Menu</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Vip.VIPId" class="control-lable"></label>
                <input asp-for="@Model.Vip.VIPId" class="form-control" readonly="@(true)"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Vip.Titel" class="control-lable"></label>
                <input asp-for="@Model.Vip.Titel" class="form-control"/>
                <span asp-validation-for="Vip.Titel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Vip.Description" class="control-lable"></label>
                <input asp-for="@Model.Vip.Description" class="form-control" />
                <span asp-validation-for="Vip.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Vip.Price" class="control-lable"></label>
                <input asp-for="@Model.Vip.Price" class="form-control" />
                <span asp-validation-for="Vip.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="/Event/GetEvent">Tilbage til forsiden</a>
</div>