@page
@using Tour_De_France.Models
@model Tour_De_France.Pages.Parkeringsplads.GetParkeringspladserModel
@{
}
<div class="Parkeringsplads">
    <table class="table table-bordered table-dark table-striped">
        <thead>
            <tr class="btn-secondary active">
                <th>
                    <div class="d-flex justify-content-between p-0">
                        <div> <h5> Id </h5> </div>
                        <div>
                            <a data-toggle="tooltip" title="Sort By Id" asp-page-handler="SortById"><i class="fa fa-angle-up"></i></a>
                            <a data-toggle="tooltip" title="Sort By Id Descending" asp-page-handler="SortByIdDescending"><i class="fa fa-angle-down"></i></a>
                        </div>
                    </div>
                </th>
                <th>
                    <div class="d-flex justify-content-between p-0">
                        <div> <h5> Antal </h5> </div>
                    </div>
                </th>
                <th>
                    <div class="d-flex justify-content-between p-0">
                        <div> <h5> Ledige pladser </h5> </div>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.ParkingPlads != null)
            {
                foreach (var parkingplads in Model.ParkingPlads)
                {
                    <tr class="btn-secondary">
                        <td>
                            @parkingplads.ppId
                        </td>
                        <td>
                            @parkingplads.Count
                        </td>
                        <td>
                            @parkingplads.Free
                        </td>
                        <td>
                            <ul class="list-inline m-sm-0">
                                <li class="list-inline-item">
                                    <a class="btn btn-primary btn-md" type="button" data-toggle="tooltip" title="Updatér" asp-page="UpdateParkeringsplads" asp-route-id="@parkingplads.ppId"><i class="fa fa-edit"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="btn btn-danger btn-md " type="button" data-toggle="tooltip" data-placement="top" title="Delete" asp-page="DeleteParkeringsplads" asp-route-id="@parkingplads.ppId"><i class="fa fa-trash"></i></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<p>
    <a class="btn btn-secondary" data-toggle="tooltip" title="Lav en Parkeringsplads" asp-page="CreateParkeringspladser"><i class="fa fa-plus-square mr-1"></i> Lav en ny Parkeringsplads </a>
</p>



<div>
    <a asp-page="/Parkeringsplads/ParkeringspladsInfo">Tilbage til Parkeringsplads Information</a>
</div>  