@page "{id:int}"
@model Tour_De_France.Pages.Tribune.EditTribuneModel
@{
}
<h1>Ændre tribune event tiden her:</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Tribune.TribuneId" class="control-lable"></label>
                <input asp-for="@Model.Tribune.TribuneId" class="form-control" readonly="@(true)"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Tribune.Time" class="control-lable"></label>
                <input asp-for="@Model.Tribune.Time" class="form-control"/>
                <span asp-validation-for="Tribune.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="/Tribune/GetTribune">Tilbage til tribune eventet</a>
</div>